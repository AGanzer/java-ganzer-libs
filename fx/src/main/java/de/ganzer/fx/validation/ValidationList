package de.ganzer.fx.validation;

import de.ganzer.fx.validation.ValidatorTextFormatter;

import java.util.ArrayList;

/**
 * A utility class that simplifies the validation of multiple inputs.
 */
public class ValidationList extends ArrayList<ValidatorTextFormatter> {
    /**
     * Validates all input that is inserted into this {@code ValidationList}.
     *
     * @return {@code true} if all input is valid; otherwise, {@code false}.
     */
    public boolean validate() {
        boolean valid = true;
        
        for (ValidatorTextFormatter formatter: this)
            valid = formatter.isValid() && valid;

        return valid;
    }
}
